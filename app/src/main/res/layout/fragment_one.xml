<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingBottom="@dimen/size5"
            android:paddingTop="@dimen/size5">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/size33"
                android:layout_height="@dimen/size33"
                android:layout_marginLeft="@dimen/size5"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextSize19Color333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size15"
                android:layout_toRightOf="@id/iv_head"
                android:text="E点茶" />

            <View
                android:id="@+id/view_msg"
                android:layout_width="@dimen/size20"
                android:layout_height="@dimen/size17"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size10"
                android:background="@mipmap/icon_message" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size160"
            android:background="#51b338">

            <TextView
                android:id="@+id/tv_revenues"
                style="@style/TextSize15Color333"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:text="近30天收入（元）"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_money"
                style="@style/TextSize15Color333"
                android:layout_below="@id/tv_revenues"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:text="12014.00"
                android:textColor="#fff"
                android:textSize="@dimen/sp29" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size75"
            android:background="#fff"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:weightSum="3">

            <com.ediancha.edcbusiness.view.Color2Text
                android:id="@+id/tv_shop"
                style="@style/TextSize15Color333"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/size6"
                android:text="12"
                tool:Color2Text_color="#333"
                tool:Color2Text_content="\n商品待处理"
                tool:Color2Text_size="@dimen/sp13" />

            <View
                android:layout_width="@dimen/size1"
                android:layout_height="match_parent"
                android:background="#e1e1e1"></View>

            <com.ediancha.edcbusiness.view.Color2Text
                android:id="@+id/tv_seat"
                style="@style/TextSize15Color333"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/size6"
                android:text="12"
                tool:Color2Text_color="#333"
                tool:Color2Text_content="\n订座待处理"
                tool:Color2Text_size="@dimen/sp13" />

            <View
                android:layout_width="@dimen/size1"
                android:layout_height="match_parent"
                android:background="#e1e1e1"></View>

            <com.ediancha.edcbusiness.view.Color2Text
                android:id="@+id/tv_ch"
                style="@style/TextSize15Color333"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/size6"
                android:text="12"
                tool:Color2Text_color="#333"
                tool:Color2Text_content="\n茶会待处理"
                tool:Color2Text_size="@dimen/sp13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size20"
            android:background="#fff"
            android:paddingTop="@dimen/size15"
            android:weightSum="3">

            <com.ediancha.edcbusiness.view.TextImage
                android:id="@+id/tv_1"
                style="@style/TextSize14Color333"
                android:layout_width="0dp"
                android:layout_marginBottom="@dimen/size20"
                android:layout_marginTop="@dimen/size12"
                android:layout_weight="1"
                android:drawablePadding="@dimen/size10"
                android:gravity="center"
                android:text="店铺管理"
                tool:TextImage_drawable="@mipmap/icon_index_shopstore"
                tool:TextImage_height="@dimen/size30"
                tool:TextImage_seat="2"
                tool:TextImage_width="@dimen/size25" />

            <View
                android:layout_width="@dimen/size1"
                android:layout_height="match_parent"
                android:background="#e1e1e1"></View>

            <com.ediancha.edcbusiness.view.TextImage
                android:id="@+id/tv_2"
                style="@style/TextSize14Color333"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/size15"
                android:layout_weight="1"
                android:drawablePadding="@dimen/size10"
                android:gravity="center"
                android:text="商品管理"
                tool:TextImage_drawable="@mipmap/icon_index_shop"
                tool:TextImage_height="@dimen/size30"
                tool:TextImage_seat="2"
                tool:TextImage_width="@dimen/size25" />

            <View
                android:layout_width="@dimen/size1"
                android:layout_height="match_parent"
                android:background="#e1e1e1"></View>

            <com.ediancha.edcbusiness.view.TextImage
                android:id="@+id/tv_3"
                style="@style/TextSize14Color333"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/size15"
                android:layout_weight="1"
                android:drawablePadding="@dimen/size10"
                android:gravity="center"
                android:text="订座管理"
                tool:TextImage_drawable="@mipmap/icon_index_bookseat"
                tool:TextImage_height="@dimen/size30"
                tool:TextImage_seat="2"
                tool:TextImage_width="@dimen/size25" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:background="#e1e1e1">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingBottom="@dimen/size15"
            android:weightSum="3">

            <com.ediancha.edcbusiness.view.TextImage
                android:id="@+id/tv_4"
                style="@style/TextSize14Color333"
                android:layout_width="0dp"
                android:layout_marginBottom="@dimen/size12"
                android:layout_marginTop="@dimen/size20"
                android:layout_weight="1"
                android:drawablePadding="@dimen/size10"
                android:gravity="center"
                android:text="茶会管理"
                tool:TextImage_drawable="@mipmap/icon_index_teaparty"
                tool:TextImage_height="@dimen/size30"
                tool:TextImage_seat="2"
                tool:TextImage_width="@dimen/size35" />

            <View
                android:layout_width="@dimen/size1"
                android:layout_height="match_parent"
                android:background="#e1e1e1"></View>

            <com.ediancha.edcbusiness.view.TextImage
                android:id="@+id/tv_5"
                style="@style/TextSize14Color333"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/size25"
                android:layout_weight="1"
                android:drawablePadding="@dimen/size10"
                android:gravity="center"
                android:text="订单管理"
                tool:TextImage_drawable="@mipmap/icon_index_order"
                tool:TextImage_height="@dimen/size30"
                tool:TextImage_seat="2"
                tool:TextImage_width="@dimen/size23" />

            <View
                android:layout_width="@dimen/size1"
                android:layout_height="match_parent"
                android:background="#e1e1e1"></View>

            <com.ediancha.edcbusiness.view.TextImage
                android:id="@+id/tv_6"
                style="@style/TextSize14Color333"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/size25"
                android:layout_weight="1"
                android:drawablePadding="@dimen/size10"
                android:gravity="center"
                android:text="数据统计"
                tool:TextImage_drawable="@mipmap/icon_index_data"
                tool:TextImage_height="@dimen/size30"
                tool:TextImage_seat="2"
                tool:TextImage_width="@dimen/size25" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>